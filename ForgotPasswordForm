using MySql.Data.MySqlClient;
using System;
using System.Security.Cryptography;
using System.Text;
using System.Windows.Forms;

namespace WinFormsApp2
{
    public partial class ForgotPasswordForm : Form
    {
        private readonly DBConnection dbConnection = new DBConnection();

        public ForgotPasswordForm()
        {
            InitializeComponent();
        }

        private void btnResetPassword_Click(object sender, EventArgs e)
        {
            string username = txtUsername.Text.Trim();
            string newPassword = txtNewPassword.Text;
            string confirmPassword = txtConfirmPassword.Text;

            // --- 1. ตรวจสอบข้อมูลเบื้องต้น ---
            if (string.IsNullOrWhiteSpace(username))
            {
                MessageBox.Show("กรุณากรอก Username", "ข้อมูลไม่ครบถ้วน", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            if (newPassword.Length < 8)
            {
                MessageBox.Show("รหัสผ่านใหม่ต้องมีความยาวอย่างน้อย 8 ตัวอักษร", "ข้อมูลไม่ถูกต้อง", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            if (newPassword != confirmPassword)
            {
                MessageBox.Show("รหัสผ่านใหม่และการยืนยันรหัสผ่านไม่ตรงกัน", "ข้อมูลไม่ถูกต้อง", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            // --- 2. เชื่อมต่อฐานข้อมูลเพื่อตรวจสอบ Username และอัปเดต ---
            using (var conn = new MySqlConnection(dbConnection.connection.ConnectionString))
            {
                try
                {
                    conn.Open();

                    // 2.1 ตรวจสอบว่ามี Username นี้ในระบบหรือไม่
                    string checkUserQuery = "SELECT COUNT(*) FROM members WHERE username = @username";
                    var cmdCheck = new MySqlCommand(checkUserQuery, conn);
                    cmdCheck.Parameters.AddWithValue("@username", username);

                    long userExists = (long)cmdCheck.ExecuteScalar();
                    if (userExists == 0)
                    {
                        MessageBox.Show("ไม่พบ Username นี้ในระบบ", "ไม่พบผู้ใช้", MessageBoxButtons.OK, MessageBoxIcon.Error);
                        return;
                    }

                    string updateQuery = "UPDATE members SET password = @password WHERE username = @username"; // เปลี่ยน password_hash เป็น password
                    var cmdUpdate = new MySqlCommand(updateQuery, conn);
                    cmdUpdate.Parameters.AddWithValue("@password", newPassword); // อัปเดตด้วย password ใหม่ตรงๆ
                    cmdUpdate.Parameters.AddWithValue("@username", username);

                    int rowsAffected = cmdUpdate.ExecuteNonQuery();

                    if (rowsAffected > 0)
                    {
                        MessageBox.Show("รีเซ็ตรหัสผ่านสำเร็จ!", "สำเร็จ", MessageBoxButtons.OK, MessageBoxIcon.Information);
                        this.Close(); // ปิดฟอร์มเมื่อสำเร็จ
                    }
                    else
                    {
                        MessageBox.Show("เกิดข้อผิดพลาดในการอัปเดตรหัสผ่าน", "ข้อผิดพลาด", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show("เกิดข้อผิดพลาดในการเชื่อมต่อฐานข้อมูล: " + ex.Message, "ข้อผิดพลาด", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
        }

        // ฟังก์ชันเข้ารหัสผ่าน (ต้องเหมือนกับในฟอร์มอื่นๆ)
        private string ComputeSha256Hash(string rawData)
        {
            using (SHA256 sha256Hash = SHA256.Create())
            {
                byte[] bytes = sha256Hash.ComputeHash(Encoding.UTF8.GetBytes(rawData));
                StringBuilder builder = new StringBuilder();
                for (int i = 0; i < bytes.Length; i++)
                {
                    builder.Append(bytes[i].ToString("x2"));
                }
                return builder.ToString();
            }
        }

        private void linkBackToLogin_LinkClicked(object sender, LinkLabelLinkClickedEventArgs e)
        {
            this.Close();
        }
    }
}
